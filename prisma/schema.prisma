generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  user_id   Int       @id @default(autoincrement())
  username  String
  password  String
  email     String    @unique
  clients   Client[]
}

model Client {
  client_id   Int       @id @default(autoincrement())
  user_id     Int
  ip_address  String?   // Represent IP addresses as String
  userData    Data[]
  user        User      @relation(fields: [user_id], references: [user_id])
}

model Data {
  data_id    Int       @id @default(autoincrement())
  client_id  Int
  up_time    DateTime?
  off_time   DateTime?
  device_type String
  browser_info String
  geolocation String
  client     Client    @relation(fields: [client_id], references: [client_id])
}
